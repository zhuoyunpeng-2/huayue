.bag{
position: relative;
width: 100%;
height: 360rpx;
overflow: hidden;
justify-content: center;
align-items: center;

}
.bag image{
  width: 770rpx;
  height: 770rpx;
  position: absolute;
  top: -50rpx;
  left: 20rpx;
  background: #ccc;
}
  .bg-blur {
            float: left;
            width: 100%;
            background-repeat: no-repeat;
            background-position: center;
            background-size: cover;
            -webkit-filter: blur(10rpx);
            -moz-filter: blur(10rpx);
            -o-filter: blur(10rpx);
            -ms-filter: blur(10rpx);
            filter: blur(10rpx);
        }
.order{
  width: 100%;
  height: 160rpx;
  background: white;
  position: absolute;
  left: 0;
  top: 230rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #ccc;
}
.order .left{
  width: 40%;
  height: 100%;
  float: left;
  display: flex;
  align-items: center;
}
.order .right{
  width: 40%;
  height: 100%;
  float: right;
  display: flex;
  align-items: center;
}
.order .left view,
.order .right view{
  flex: 1;
  display: flex;
  flex-direction: column;
}
.order .left view>text,
.order .right view>text{
  font-size: 24rpx;
  text-align: center;
  color: gray;
}
.order .left view>image,
.order .right view>image{
  width: 50rpx;
  height: 50rpx;
  margin: 0 auto;
}

.order .info{
  position: absolute;
  top: -70rpx;
  left: 40%;
  display: flex;
  flex-direction: column;
}
.order .info image{
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background: #ccc;
  border: 1rpx solid rgba(179, 177, 177, 0.555);
}
.order .info  text{
  width: 140rpx;
  height:60rpx;
  text-align: center;
  line-height: 60rpx; 
  font-size: 34rpx;
}

.direction{
margin-top: 20rpx;
}
.direction>view{
  width: 100%;
  height: 100rpx;
  display: flex;
  border-bottom: 1rpx solid #ccc;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
  justify-content: space-between;
}
.direction>view .left{
display: flex;
}
.direction view .left>image{
width: 40rpx;
height: 40rpx;
margin-right: 30rpx;
}
.direction view .left>text{
  width: 160rpx;
  height: 50rpx;
  color: rgb(34, 33, 33);
  display: block;
}
.direction view .right image{
  width: 40rpx;
  height: 40rpx;
}

.modal{
  width: 100%;
  height: 100%;
  background: black;
  opacity: 0.4;
  position: fixed;
  left: 0;
  top: 0;
}
.login{
  width: 700rpx;
  height: 400rpx;
  background: white;
  z-index: 10;
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  border-radius: 30rpx;
}
.login .title{
  width: 100%;
  height: 300rpx;
  border-bottom: 1rpx solid #ccc;
  line-height: 200rpx;
  box-sizing: border-box;
  padding: 0;
  margin: 0;
}
.login .title text{
  width: 100%;
  height: 50rpx;
  display: block;
  text-align: center;
  font-size: 36rpx;
}
.login .title .tit{
  font-weight: 550;
}
.login .title .desc{
  margin-top: 30rpx;
  color: gray;
}
.login .btn{
  display: flex;
}
.login .btn .cancle{
  height: 100rpx;
  width: 50%;
  background: white;
  border-right: 1rpx solid #ccc;
  box-sizing: border-box;
  border-radius:0  0 0  30rpx;
  line-height: 60rpx;
  font-size: 36rpx;
}
.login .btn .sure{
   height: 100rpx;
   width: 50%;
   background: white;
   color: #445374;
   border-radius:0  0  30rpx  0;
   line-height: 60rpx;
   font-size: 36rpx;
}