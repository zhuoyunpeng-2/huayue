/* pages/allOrder/allOrder.wxss */
page{
  background: rgb(238, 233, 233);
}
.nav{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.all-nav{
  background-color: white;
   padding:20rpx 20rpx;
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  text-align: center;
}
.on{
  border-bottom: 1rpx solid #fa3963;
  color: #fa3963;
}
.allorders{
  margin-top: 20rpx;
  position: relative;
  
  
}

.allpro{
  margin: 0 auto;
  margin-top: 20rpx;
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  background-color: white;
}
.status{
  width: 100%;
  display: flex;
  justify-content: space-between;
  height: 50rpx;
  line-height: 50rpx;
  margin-top: 20rpx;
  background-color: white;
}
.status-now{
  color: #fa3963
}

.orderId{
  display: flex;
  justify-content: space-between;
  color: rgb(136, 128, 128);
  font-size: 26rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-bottom: 1rpx solid #ccc
}

.pro-pos{
  display: flex;
 
  align-items: center;
  height: 200rpx;
  border-bottom: 1rpx solid #ccc;
}
.pro-img{
  width: 150rpx;
  height: 150rpx;
  display: flex;

}
.pro-img image{

  width: 100%;
  height: 100%;
  background: rgb(238, 238, 238)
}
.prosum{
  flex: 1;
  text-align: right;
  color: rgb(146, 146, 146)
}
.sum{
  display: flex;
  justify-content: space-between;
  
}
.allPri{
  display: flex;
  height: 80rpx;
  align-items: center;
}
.price{
  color: #fa3963
}
.isfukuan{
  display: flex;
  height: 80rpx;
  align-items: center;
}
.cancel{
  margin-right: 15rpx;
  width: 100rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  border:1rpx solid rgb(177, 177, 177);
  color: rgb(104, 104, 104);
  border-radius: 10rpx
}
.confir{
  width: 100rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  border:1rpx solid #fa3963;
  color: #fa3963;
  border-radius: 10rpx
}